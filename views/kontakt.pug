html(lang="en")
    head
    title Kontakt
    script  
        include ../node_modules/fullcalendar/main.js
        include ../scripts/kalender.js
    style
        include ../node_modules/fullcalendar/main.css
        include ../styles/kontakt.css
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    body
    div(class="wrapper")
        div(class="header")
            include header.pug
        div(class="info")
            br
            span(class='orangeLabel') Orange 
            p Andre viser interesse for datoen. 
            p Desto mørkere orange betyder mere interesse for datoen.
            p ______________________
            span(class="redLabel") Rød
            p Datoen er ikke tilgængelig.
        div(class='kundeInfo')
            form(action="/kontakt", method="post")
                .container
                .group
                    input(type="text", name="emne", id="emne", required)
                    span.highlight
                    span.bar
                    label Emne (Bryllup, konfir. osv.)
                .group
                    input(type="email", name="email", id="email", required)
                    span.highlight
                    span.bar
                    label Din e-mail
                .group
                    input(type="text", name="navn", id="navn", required)
                    span.highlight
                    span.bar
                    label Dit navn
                .group
                    input(type="number", name="tlfNummer", id="tlfNummer", required)
                    span.highlight
                    span.bar
                    label Dit tlf. nr.
                .group
                    input(type="text", name="besked", id="besked", required)
                    span.highlight
                    span.bar
                    label Eventuelle spørgsmål, ønsker eller behov
                .group
                    input(type="text", name="dato", id="dato", required)
                    span.highlight
                    span.bar
                    label Klik på dato i kalender (eller YYYY-MM-DD)
                button(type="submit", class='knappen', id="submit", onclick="alertFunction()") Send formular
                    script
                        include ../scripts/alert.js
            //- .button(type="submit", name="submit", id="submit", onclick="alertFunction()") Send formular
            //-     a.example_a(href='add-website-here' target='_blank' rel='nofollow noopener') Send mig afsted
            //- .button_cont(align='center')
        div(class='fullCalendar', id='calendar')
            #calendar
        div(class='footer')
            include footer.pug


